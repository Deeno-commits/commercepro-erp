
{
  "name": "commercepro-erp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "electron .",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.563.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.13.0",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.18",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.0",
    "vite": "^5.4.1"
  },
  "overrides": {
    "react-leaflet": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "@react-leaflet/core": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "build": {
    "appId": "com.commercepro.erp",
    "productName": "CommercePro ERP",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
